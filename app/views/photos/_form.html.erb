<%= simple_form_for([@user, @photo], :url => user_photos_path) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, input_html:{style: 'width:500px;'} %>
    <%= f.input :image, as: :file %>
    </div>
  <div><%= f.hidden_field :user_id, :value => @user.id %></div>
  <div><%= f.hidden_field :uploader_id, :value => current_user.id%></div>

  <div class="form-actions">
    <%= f.button :submit, "Upload Review", :class => 'btn-primary' %>
    <%= link_to "Cancel",
                 user_photos_path(@user), :class => 'btn' %>
  </div>
<% end %>